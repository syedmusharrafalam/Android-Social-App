<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
<android.support.v7.widget.CardView
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_margin="5dp"



    >




<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/back"
        android:id="@+id/textUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="30dp"
    />
    <TextView
        android:textColor="@color/back"
        android:layout_below="@+id/textUserName"
        android:id="@+id/textPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post"
        />
    <ImageView
        android:layout_below="@+id/textPost"
        android:id="@+id/imageUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <Button
        android:textColor="@color/myColors"
        android:background="@color/myColor"
        android:layout_below="@+id/imageUser"
        android:id="@+id/btnLike"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Like"

        />


    <Button
      android:layout_marginStart="10dp"
        android:textColor="@color/myColors"
        android:background="@color/myColor"
        android:layout_below="@+id/imageUser"
        android:layout_toEndOf="@+id/btnLike"
        android:id="@+id/btnCommentsHide"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="COMMENTS hide"

        />
    <Button
        android:layout_marginStart="10dp"
        android:textColor="@color/myColors"
        android:background="@color/myColor"
        android:layout_below="@+id/imageUser"
        android:layout_toEndOf="@+id/btnLike"
        android:id="@+id/btnComments"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="COMMENTS"

        />
    <Button
        android:layout_marginStart="10dp"
        android:textColor="@color/myColors"
        android:background="@color/myColor"
        android:layout_below="@+id/imageUser"
        android:layout_toEndOf="@+id/btnLike"
        android:id="@+id/btnComments2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="COMMENTS"

        />

    <TextView
        android:id="@+id/likeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnComments"
        />




    <EditText
        android:id="@+id/addComments"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
         android:layout_below="@id/likeText"

        android:layout_marginStart="15dp"
       android:textColorHint="@color/back"
        android:hint="Enter your comments" />
    <Button
        android:textColor="@color/myColors"
        android:background="@color/myColor"
        android:id="@+id/submitComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/likeText"
        android:layout_toEndOf="@+id/addComments"
        android:text="submit" />



    <LinearLayout
        android:layout_below="@+id/submitComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="vertical">


    </LinearLayout>


</RelativeLayout>





</android.support.v7.widget.CardView>

</LinearLayout>